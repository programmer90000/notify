{
    "name": "notify",
    "version": "1.0.0",
    "main": "electron-main.js",
    "private": true,
    "description": "",
    "author": "",
    "license": "",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "build": "cd frontend && npm run build && cd .. && electron-builder",
        "start": "cd frontend/ && npm run build && concurrently \"cd ../backend/ &&  node server.js\" \"npm start\"",
        "lint": "npx eslint ."
    },
    "build": {
        "appId": "com.yourdomain.notify",
        "productName": "Notify",
        "files": [
            "electron-main.js",
            "frontend/dist/**/*",
            "backend/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "backend/notifications.db",
                "to": "notifications.db",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "buildResources": "build"
        }
    },
    "workspaces": [
        "frontend",
        "backend"
    ],
    "dependencies": {
        "concurrently": "9.1.2",
        "node-fetch": "3.3.2"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "2.7.2",
        "@stylistic/eslint-plugin-js": "2.7.2",
        "@stylistic/eslint-plugin-jsx": "2.7.2",
        "electron": "36.4.0",
        "electron-builder": "26.0.12",
        "eslint": "^9.10.0",
        "eslint-plugin-json-format": "^2.0.1",
        "husky": "9.1.5"
    }
}
